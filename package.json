{
  "name": "monorepo-template",
  "version": "1.0.0",
  "description": "A template for monorepo project (React„ÄÅVue...)",
  "keywords": [
    "React",
    "Vue",
    "Framework",
    "Monorepo"
  ],
  "homepage": "https://github.com/RealCoolSnow/monorepo-template#readme",
  "bugs": {
    "url": "https://github.com/RealCoolSnow/monorepo-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RealCoolSnow/monorepo-template.git"
  },
  "license": "MIT",
  "author": "CoolSnow",
  "main": "index.js",
  "scripts": {
    "format": "pretty-quick",
    "sort": "npx sort-package-json \"package.json\" \"packages/*/package.json\" \"apps/*/package.json\" \"examples/*/package.json\" \"services/*/package.json\" \"features/*/package.json\"",
    "test": "echo \"no tests\""
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "deploy": {
        "dependsOn": [
          "build"
        ]
      },
      "dev": {
        "cache": false
      }
    }
  }
}
